<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_header_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        tools:src="@tools:sample/avatars"
        android:layout_margin="16dp"
        android:src="@drawable/personal_img"/>
    <TextView
        android:id="@+id/nav_header_personal_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Personal Name"
        android:layout_gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Tooltip"
        android:textColor="@color/HeadTextWhite"
        android:text="@string/personal_name"/>

</LinearLayout>