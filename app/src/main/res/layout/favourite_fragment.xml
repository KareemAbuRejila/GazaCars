<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="favouriteAdapter"
            type="ps.aio.gazacars.ui.adapters.AdapterMore" />
    </data>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favourite_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.favourite.FavouriteFragment"
        android:paddingTop="@dimen/padding_main"
        android:paddingStart="@dimen/padding_main"
        android:paddingEnd="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        app:adapter="@{favouriteAdapter}"/>
</layout>
