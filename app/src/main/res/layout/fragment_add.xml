<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_add_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="true"
                android:orientation="vertical"
                tools:context=".ui.fragments.add.ADDFragment">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_main_for_card"
                    android:layout_marginTop="@dimen/padding_main_for_card"
                    android:layout_marginEnd="@dimen/padding_main_for_card"
                    app:cardCornerRadius="@dimen/cardview_spinner_radius"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinner_r_d"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/releaseDates"
                        android:padding="8dp"
                        android:spinnerMode="dropdown" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_main_for_card"
                    android:layout_marginTop="@dimen/padding_main_for_card"
                    android:layout_marginEnd="@dimen/padding_main_for_card"
                    app:cardCornerRadius="@dimen/cardview_spinner_radius"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinner_c_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/carBrands"
                        android:padding="8dp"
                        android:spinnerMode="dropdown" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_main_for_card"
                    android:layout_marginTop="@dimen/padding_main_for_card"
                    android:layout_marginEnd="@dimen/padding_main_for_card"
                    app:cardCornerRadius="@dimen/cardview_spinner_radius"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinner_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/models"
                        android:padding="8dp"
                        android:spinnerMode="dropdown" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_main_for_card"
                    android:layout_marginTop="@dimen/padding_main_for_card"
                    android:layout_marginEnd="@dimen/padding_main_for_card"
                    app:cardCornerRadius="@dimen/cardview_spinner_radius"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinner_trim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/trims"
                        android:padding="8dp"
                        android:spinnerMode="dropdown" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_main_for_card"
                    android:layout_marginTop="@dimen/padding_main_for_card"
                    android:layout_marginEnd="@dimen/padding_main_for_card"
                    app:cardCornerRadius="@dimen/cardview_spinner_radius"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinner_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/types"
                        android:padding="8dp"
                        android:spinnerMode="dropdown" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_main_for_card"
                    android:layout_marginTop="@dimen/padding_main_for_card"
                    android:layout_marginEnd="@dimen/padding_main_for_card"
                    app:cardCornerRadius="@dimen/cardview_spinner_radius"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinner_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/statuses"
                        android:padding="8dp"
                        android:spinnerMode="dropdown" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_main_for_card"
                    android:layout_marginTop="@dimen/padding_main_for_card"
                    android:layout_marginEnd="@dimen/padding_main_for_card"
                    app:cardCornerRadius="@dimen/cardview_spinner_radius"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinner_f_s"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/financial_statuses"
                        android:padding="8dp"
                        android:spinnerMode="dropdown" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_main_for_card"
                    android:layout_marginTop="@dimen/padding_main_for_card"
                    android:layout_marginEnd="@dimen/padding_main_for_card"
                    app:cardCornerRadius="@dimen/cardview_spinner_radius"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/lay_distance"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"
                        android:hint="@string/distance"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_distance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_main_for_card"
                    android:layout_marginTop="@dimen/padding_main_for_card"
                    android:layout_marginEnd="@dimen/padding_main_for_card"
                    app:cardCornerRadius="@dimen/cardview_spinner_radius"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/lay_key_words"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"
                        android:hint="@string/key_words"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_key_words"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_main_for_card"
                    android:layout_marginTop="@dimen/padding_main_for_card"
                    android:layout_marginEnd="@dimen/padding_main_for_card"
                    app:cardCornerRadius="@dimen/cardview_spinner_radius"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/lay_details"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="5dp"
                        android:hint="@string/details_optional"
                        app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:lines="3"
                            android:maxLines="3"
                            app:boxStrokeWidth="0dp"
                            android:isScrollContainer="true"
                            app:boxStrokeWidthFocused="0dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/check_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_main"
                    android:text="Add 10$ to add your car at top search"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/grayStroke"
                    />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_to_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:paddingLeft="18dp"
            android:paddingTop="8dp"
            android:paddingRight="18dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="@dimen/padding_main"
            android:layout_marginStart="@dimen/padding_main"
            android:text="Add to sale"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:backgroundTint="@color/color_Primary"
            app:strokeColor="@color/color_Primary"
            android:visibility="gone"
            />
    </FrameLayout>
</layout>