<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.IntroActivity">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/screen_intro_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabBackground="@drawable/indicator_seletor"
            app:tabIndicator="@android:color/transparent"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorGravity="bottom"
            android:background="@android:color/transparent"
            android:layout_gravity="bottom|center_horizontal" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:drawableEnd="@drawable/ic_arrow_next"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:drawableTint="@color/color_grad1_top"
            android:text="@string/next"
            android:textColor="@color/color_grad1_top"
            android:layout_gravity="end|bottom" />

        <Button
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="@string/skip"
            android:layout_marginTop="30dp"
            android:textColor="@color/color_grad1_top"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:layout_gravity="end|top" />
    </FrameLayout>
</layout>