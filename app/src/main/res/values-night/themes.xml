<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GazaCars" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GazaCars.SplashActivity">
        <item name="android:background">@drawable/bg_splash_activity</item>
    </style>


    //Buttons Style
    <style name="main_button_1" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/corners_main_button</item>
        <item name="android:paddingTop">@dimen/paddingTopAndBottom_main_button</item>
        <item name="android:paddingBottom">@dimen/paddingTopAndBottom_main_button</item>
    </style>
    <style name="main_button_2" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/corners_main_button</item>
        <item name="android:paddingTop">@dimen/paddingTopAndBottom_main_button</item>
        <item name="android:paddingBottom">@dimen/paddingTopAndBottom_main_button</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/color_Primary</item>

    </style>
</resources>